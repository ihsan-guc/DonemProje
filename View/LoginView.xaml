<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DonemProje.View.LoginView" x:Name="loginView">
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="20" VerticalOptions="Center">
            <Label Text="{Binding Error}" HorizontalOptions="Center" FontAttributes="Bold" FontSize="23" TextColor="Red"></Label>
            <Entry Text="{Binding UserName}" FontSize="23" TextColor="White" Placeholder="UserName" PlaceholderColor="White"></Entry>
            <Entry Text="{Binding Password}" FontSize="23" TextColor="White" Placeholder="Password" PlaceholderColor="White" IsPassword="True"></Entry>
            <Button Text="Giriş" Command="{Binding Path=BindingContext.LoginIn
                ,Source={x:Reference loginView}}" FontSize="23" FontAttributes="Bold"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>