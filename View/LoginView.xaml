<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DonemProje.View.LoginView" x:Name="loginView">
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="20" VerticalOptions="Center">
            <ActivityIndicator Color="Red" IsVisible="{Binding IsVisible}" IsRunning="True"></ActivityIndicator>
            <Label Text="{Binding Error}" HorizontalOptions="Center" FontAttributes="Bold" FontSize="23" TextColor="Red"></Label>
            <Entry Text="{Binding UserName}" TextColor="Black" Placeholder="UserName"></Entry>
            <Entry Text="{Binding Password}" TextColor="Black" Placeholder="Password" IsPassword="True"></Entry>
            <Button Text="Giriş" Command="{Binding Path=BindingContext.LoginIn
                ,Source={x:Reference loginView}}"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>