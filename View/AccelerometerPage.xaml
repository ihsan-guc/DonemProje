<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" Title="Accelerometer"
             x:Class="DonemProje.View.AccelerometerPage">
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="20">
            <StackLayout Orientation="Vertical" HorizontalOptions="Center">
                <Label x:Name="LabelX" Text="Görmek için Başlatın" TextColor="Black" FontSize="23"></Label>
                <Label x:Name="LabelY" Text="Görmek için Başlatın" TextColor="Black" FontSize="23"></Label>
                <Label x:Name="LabelZ" Text="Görmek için Başlatın" TextColor="Black" FontSize="23"></Label>
            </StackLayout>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <Button Text="Start" x:Name="ButtonStart" Clicked="ButtonStart_Clicked"></Button>
                <Button Text="Stop" x:Name="ButtonStop" Clicked="ButtonStop_Clicked"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>